@page "/AddUser"
@using merTensWebApp.Data
@using merTensWebApp.Shared
@inject NavigationManager NavigationManager
@inject HR_UserService objUserService

<h2>Mitarbeiter hinzufügen</h2>

<form>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="Vorname" class="control-label">Vorname</label>
                <input form="Vorname" class="form-control" @bind="@objUser.Vorname" />
            </div>
            <div class="form-group">
                <label for="Stellenbeschreibung" class="control-label"></label>
                <select @bind="@objUser.Stellenbeschreibung" class="form-control">
                    <option value="">-- Bitte wähle die Abteilung--</option>
                    <option value="KAM">KAM</option>
                </select>
            </div>
        </div>
    </div>
</form>

@code {
    Model_HR_User_Anlage objUser = new Model_HR_User_Anlage();

    protected void CreateUser()
    {
        objUserService.Create(objUser);
        NavigationManager.NavigateTo("HR_User-Anlage");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("HR_User-Anlage");
    }

}
